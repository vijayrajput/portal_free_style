<mvc:View controllerName="com.test.widget.languageSelectorWidget.controller.View1" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core">
	<FlexBox alignItems="Center" justifyContent="End" class="hboxClass">
		<items>
			<Select id="languageSelect" items="{AvailableLanguages>/}" change="onDropDownSelect">
				<core:Item key="{AvailableLanguages>key}" text="{AvailableLanguages>text}"/>
			</Select>
		</items>
	</FlexBox>
</mvc:View>